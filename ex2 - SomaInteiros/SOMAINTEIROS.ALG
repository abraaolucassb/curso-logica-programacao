algoritmo "SomaInteiros"
// somar dois números inteiros e mostrar a soma na tela

var
   a, b, c : inteiro


inicio
   escreva("Digite um número: ")
   // comando de entrada
   leia(a)

   escreva("Digite um número: ")
   leia(b)

   // processamento
   c <- a+b
   
   // saída
   escreva("A soma dos dois números é", c)


fimalgoritmo
